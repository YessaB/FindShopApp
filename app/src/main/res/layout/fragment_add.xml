<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_backgraound"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/shopnamee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:hint="Shop Name"
            android:layout_marginBottom="16dp"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/shopdec"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:hint="Shop Description"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/shoplocc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:hint="Shop Location"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/shopcontactt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:hint="Shop Contact"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/shopimagee"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:hint="Shop Image (Image Url)"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/addshopbtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/view_rounded_corner"
            android:text="Add Shop"
            app:backgroundTint="@null"
            android:paddingHorizontal="15dp"
            android:layout_marginHorizontal="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:textColorHint="#90FFFFFF"
            android:textSize="16sp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>